# ---- 镜像与版本 ----
APP_VERSION=v1.0.0
BACKEND_IMAGE=znas-backend
FRONTEND_IMAGE=znas-frontend

# ---- 数据库 ----
POSTGRES_DB=znas
POSTGRES_USER=znas
POSTGRES_PASSWORD=znas_pass

# ---- 安全 ----
JWT_SECRET_KEY=please_generate_a_long_random_secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=please_set_a_strong_password

# ---- 时区与媒体 ----
TZ=Asia/Shanghai
IMAGES_DIR=/data/images

# ---- 系统运维（Web 更新/回滚） ----
ENABLE_WEB_OPS=true
OPS_DIR=/data/ops
PROJECT_ROOT=/data/ops/repo
REPO_URL=
UPDATE_BRANCH=main

# ---- Tailscale ----
TS_CONTAINER_NAME=tailscaled
TS_HOSTNAME=znas-server
TS_AUTHKEY=please_set_tailscale_auth_key
TS_STATE_DIR=/var/lib/tailscale
TS_USERSPACE=false
TS_ROUTES=192.168.1.0/24
